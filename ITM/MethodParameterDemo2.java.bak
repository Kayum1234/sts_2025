class Mobile
{
	double price;
	String model;
	String brandName;
	
	void setMobileData(String modelName,double price,String brandName){
		System.out.println("Mobile brand name:"+brandName);
	}
	
	void setMobileData(Mobile  m1){
		System.out.println("Mobile brand name is="+m1.brandName);
		System.out.println("Mobile model is="+m1.model);
		System.out.println("Mobile price is="+m1.price);
	}
	
}
class  MethodParameterDemo2
{
	public static void main(String[] args) 
	{
		Mobile  m1=new Mobile();
		m1.setMobileData("M123",10000.0,"Nokia");
		
		Mobile  mobile=new Mobile();
		mobile.brandName="Samsung";
		mobile.price=20000.0;
		mobile.model="S20";
		m1.setMobileData(mobile);
	}
}
